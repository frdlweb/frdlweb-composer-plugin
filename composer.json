{
	"name": "frdlweb/frdlweb-composer-plugin",
	"type": "composer-plugin",
	"description": "Composer Plugin for Frdlweb Packages",
	"keywords": ["OIDplus", "Composer Plugin"],
	"homepage": "http://frdlweb.de/",
	"license": "MIT",
	"support": {
		"email": "software@frdl.de",
		"issues": "https:\/\/github.com\/frdl\/oiplus-composer-plugin\/issues",
		"forum": "https://frdl.de/groups/profile/97/frdlweb-software",
		"source": "https:\/\/github.com\/frdl\/oiplus-composer-plugin\/tree\/master"
	},
	"authors": [
		{
			"name": "Till Wehowski",
			"email": "software@frdl.de",
			"homepage": "https:\/\/webfan.de",
			"role": "Developer"
		}
	],	
  "repositories": [	
    {"type": "composer", "url": "https://webfat.repo.pkg.frdl.de"},	
    {"type": "composer", "url": "https://frdl.repo.pkg.frdl.de"},	
    {"type": "composer", "url": "https://oidplus-plugins.repo.pkg.frdl.de"},	 
    {"type": "composer", "url": "https://weid.repo.pkg.frdl.de"},    
    {"type": "composer", "url": "https://repo.pkg.frdl.de"} 
  ],	
        "minimum-stability": "dev",
	"require": {
		"php": ">=7.0 || >=8.0",
		"composer-plugin-api": "^1.1 || ^2.0",
		"composer/installers": "^1.0 || ^2.0",
		"vendor-patch/composer-installers-extender": ">=v0.0.9",
		"civicrm/composer-compile-plugin": "*",
		"civicrm/composer-downloads-plugin": "*",
		"civicrm/composer-compile-lib": "*",
		"smoren/mushroom-hook-manager": "1.0.0",
		"laminas/laminas-component-installer": "*",
                "frdl/oiplus-composer-plugin" : "*",	       
                "comcast/php-legal-licenses": "*"
	},

	"provide": {
		"wikimedia/composer-merge-plugin": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\Composer\\Merge\\V2\\": "src/merge-plugin/",
			"Webfan\\Module\\Webfantize\\": "src/modules/webfan/"
		},
		"classmap": ["src/merge-plugin/"]
	},

	"scripts-descriptions": {
		"webfantize": "Invoke Webfan 'Magic Shield Scripts' on/in the current context @ToDo CHANGE TO e.g. 'OIDplusInstallshield'"
	},

	"scripts": {
		"command": [
			"@composer webfantize"
		],
		"webfantize": [
			"Webfan\\Module\\Webfantize\\Composer::runtimePreBootShield"
		]
	},
	"extra": {
		"compile-mode": "all",
		"foxy": false,
		"class": [
			"Wikimedia\\Composer\\Merge\\V2\\MergePlugin",
			"VendorPatch\\OomphInc\\ComposerInstallersExtender\\Plugin",
			"LastCall\\DownloadsPlugin\\Plugin",
			"Wikimedia\\Composer\\Merge\\V2\\MergePlugin",
			"Civi\\CompilePlugin\\CompilePlugin",
			"Smoren\\Composer\\Mushroom\\HookManager"
		],
		"merge-plugin": {
			"include": [
				"~/.frdl/shared/modules/*/*/composer.json",
				"themes/*/*/composer.json",
				"modules/*/*/*/composer.json",
				"io4/*/*/*/composer.json",
				"composer.json"
			],
			"require": [			
				"composer.json"
			],
			"recurse": true,
			"replace": false,
			"ignore-duplicates": false,
			"merge-dev": true,
			"merge-extra": true,
			"merge-extra-deep": true,
			"merge-scripts": true
		},
		"installer-types": [
			"webfan-theme",
			"webfan-module",
			"webfan-app",
			"webfan-site",
			"webfan-server",
			"webfan-backend",
			"webfan-package",
			"webfan-assets",
			"webfan-public",
			"webfan-data",
			
			"io4-theme",
			"io4-module",
			"io4-adapter",
			"io4-package",
			"project",
			"library",
 
			"oiplus-plugin-public-pages",
			"oiplus-plugin-ra-pages",
			"oiplus-plugin-admin-pages",
			"oiplus-plugin-auth",
			"oiplus-plugin-database",
			"oiplus-plugin-sql-slang",
			"oiplus-plugin-logger",
			"oiplus-plugin-object-types",
			"oiplus-plugin-language",
			"oiplus-plugin-design",
			"oiplus-plugin-captcha"			
		],
		"installer-paths": {						
			"~/": [
			        "type:webfan-server"
			], 					
			"~/.frdl/shared/{$type}s/{$vendor}/{$name}/": [		
				"type:io4-theme",					
				"type:webfan-theme",
			        "type:io4-adapter"	
			], 						
			"~/.frdl/data/{$type}s/{$vendor}/{$name}/": [
			        "type:webfan-site",
			         "type:webfan-data"
			], 		
			"vendor/{$vendor}/{$name}/": [
				"type:library"
			], 			
			".": [
				"type:webfan-package",
				"type:io4-package"
			], 	
			"public/assets/{$type}s/{$vendor}/{$name}/": [							
				"type:webfan-assets"
			],	
			"public/": [							
				"type:webfan-public"
			],	
			"app/{$type}s/{$vendor}/{$name}/": [				
				"type:project",				
				"type:webfan-app",					
				"type:webfan-backend"
			],	
			"packages/{$type}s/{$vendor}/{$name}/": [							
				"type:webfan-module", 		
				"type:io4-module"
			],



			
			"plugins/{$vendor}/raPages/{$name}/": [
				"type:oiplus-plugin-ra-pages"
			],
			"plugins/{$vendor}/adminPages/{$name}/": [
				"type:oiplus-plugin-admin-pages"
			],
			"plugins/{$vendor}/auth/{$name}/": [
				"type:oiplus-plugin-auth"
			],
			"plugins/{$vendor}/database/{$name}/": [
				"type:oiplus-plugin-database"
			],
			"plugins/{$vendor}/sqlSlang/{$name}/": [
				"type:oiplus-plugin-sql-slang"
			],
			"plugins/{$vendor}/logger/{$name}/": [
				"type:oiplus-plugin-logger"
			],
			"plugins/{$vendor}/objectTypes/{$name}/": [
				"type:oiplus-plugin-object-types"
			],
			"plugins/{$vendor}/language/{$name}/": [
				"type:oiplus-plugin-language"
			],
			"plugins/{$vendor}/design/{$name}/": [
				"type:oiplus-plugin-design"
			],
			"plugins/{$vendor}/captcha/{$name}/": [
				"type:oiplus-plugin-captcha"
			]
		},

		"dependency-scripts": {
			"run": true,
			"trust": [
				"danielmarschall\/*",
				"airmad\/*",
				"composer\/*",
				"symfony\/*",
				"frdl\/*",
				"webfan3\/*",
				"wehowski\/*",
				"vendor-patch\/*",
				"smoren\/mushroom-hook-manager",
				"oomphinc\/composer-installers-extender"
			],
			"exclude": [],
			"types": [

			"webfan-theme",
			"webfan-module",
			"webfan-app",
			"webfan-site",
			"webfan-server",
			"webfan-backend",
			"webfan-package",
			"webfan-assets",
			"webfan-public",
			
			"io4-theme",
			"io4-module",
			"io4-adapter",
			"io4-package",
			"project",
			"library",
				
			"oiplus-plugin-public-pages",
			"oiplus-plugin-ra-pages",
			"oiplus-plugin-admin-pages",
			"oiplus-plugin-auth",
			"oiplus-plugin-database",
			"oiplus-plugin-sql-slang",
			"oiplus-plugin-logger",
			"oiplus-plugin-object-types",
			   "oiplus-plugin-language",
			   "oiplus-plugin-design",
			   "oiplus-plugin-captcha"		
			]
		}
	},
    "config": {
	"bin-dir": "~/.frdl/bin",	
	"optimize-autoloader" : true,
	"classmap-authoritative" : false,  
	"prepend-autoloader": true, 
	"preferred-install": "auto",		
		"allow-plugins": {
			"danielmarschall/*": true,
			"airmad/*": true,
			"civicrm/*": true,
			"composer/*": true,
			"frdl/*": true,
			"frdlweb/*": true,
			"kylekatarnls/update-helper": true,
			"vendor-patch/composer-custom-directory-installer": true,
			"vendor-patch/composer-installers-extender": true,
			"frdl/oiplus-composer-plugin": true,
			"smoren/mushroom-hook-manager": true,
		        "composer/installers": true,
			"oomphinc/composer-installers-extender": true,
                        "laminas/*" : true
		}

	}
}
